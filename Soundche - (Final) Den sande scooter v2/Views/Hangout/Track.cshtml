@model Soundche.Core.Domain.Track
@using HtmlHelpers.BeginCollectionItemCore

<div class="editorRow">
    @using (Html.BeginCollectionItem("tracks"))
    {
        @Html.TextAreaFor(track => track.Name)
        @Html.CheckBoxFor(track => track.Exclude)
        <!--Excludes the song from being played, useful fx. when a song has been removed from YT, but you dont want it erased from the playlist-->

        @Html.HiddenFor(track => track.YoutubeUrl)
        <textarea placeholder="Youtube URL..."></textarea>
    <!-- TODO Display yt.com/ + youtube_id -->
    <!-- TODO Get something working where you put in a youtube url, and it saves only the REGEXd id, but it still displays the full link -->
    }
</div>